.editor
  h1,h2,h3,h4,h5,h6
    margin-top: 0

  .toolbar
    height: 45px
    .col
      height: 100%
      border-right: 2px solid #eee
      border-bottom: 2px solid #eee
    .col:last-child
      border-right: none
    .buttons
      text-align: right

  .content
    .col
      height: 100%
      padding-top: 10px
      overflow-y: auto
      border-right: 2px solid #eee
    .col:last-child
      border-right: none
    .properties
      .form-group
        border-bottom: 1px solid #eee
        padding-bottom: 10px
        input[type="radio"]
          margin-left: -15px
    .editor
      input
        margin: 2px
