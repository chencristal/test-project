extends ../layout/layout.pug

block content
  .row
    .col-md-12
      h1.page-header Edit Provision Template {{ ::provisionTemplate.name }}
  .row(ng-show="isLoading")
    .col-md-12
      include ../common/spinner.pug
  div(ng-hide="isLoading")
    .row
      .col-md-12
        include ./form.pug
    .row
      .col-md-12
        .buttons.text-right
          a.btn.btn-default(href="/provision-templates") Cancel
          button.btn.btn-primary(ng-click="saveProvisionTemplate()" ng-disabled="provisionTemplateForm.$invalid || isSaving") Save
