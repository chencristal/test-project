form.form-horizontal(name="documentTemplateTypeForm")
  .form-group(ng-class="{ 'has-error': documentTemplateTypeForm.name.$error.required }")
    label.col-md-3.control-label(for="name") Name
    .col-md-9
      input.form-control(name="name" type="text" placeholder="Name"
                         ng-model="documentTemplateType.name" ng-required="true" ng-disabled="isSaving")

  .form-group
    label.col-md-3.control-label(for="description") Description
    .col-md-9
      input.form-control(name="description" type="text" placeholder="Description"
                         ng-model="documentTemplateType.description" ng-disabled="isSaving")

  .form-group(ng-class="{ 'has-error': documentTemplateTypeForm.styles.$error.required }")
    label.col-md-3.control-label(for="file") {{::documentTemplateType.stylelbl}}
    .col-md-9
      input.form-control(name="file" id="file" type="file" on-file-change="grabJSON"
                         accept=".json" ng-disabled="isSaving")
    input(type="hidden" id="styles" ng-model="documentTemplateType.styles" name="styles" ng-required="true")
