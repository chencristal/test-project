.row(ng-show="!isLoading || !isSaving")
    .col-md-12
        p.text-center.undo-redo
            button.btn.btn-primary.btn-redo(title="Find next"
                    ng-class="{'disabled': !changes.length}"
                    ng-disabled="!changes.length"
                    ng-click="nextChange()")
                span Find
            button.btn.btn-primary.btn-undo(title="Find previous"
                    ng-class="{'disabled': !changes.length}"
                    ng-disabled="!changes.length"
                    ng-click="prevChange()")
                span Find prev
