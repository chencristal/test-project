.row(ng-show="!isSaving")
    .col-md-12
        p.text-center.undo-redo
            button.btn.btn-primary.btn-undo(title="Previous change"
                                            ng-class="{'disabled': !changes.length || currentChange === 0}"
                                            ng-disabled="!changes.length || currentChange === 0"
                                            ng-click="prevChange()")
                i.glyphicon.glyphicon-share-alt.icon-flip-horizontal
            button.btn.btn-primary.btn-redo(title="Next change"
                                            ng-class="{'disabled': !changes.length || currentChange === changes.length - 1}"
                                            ng-disabled="!changes.length || currentChange === changes.length - 1"
                                            ng-click="nextChange()")
                i.glyphicon.glyphicon-share-alt
