extends ../layout/layout.pug

block content
  .row
    .col-md-12
      h1.page-header Edit Project {{ ::project.name }}
  .row(ng-show="isLoading")
    .col-md-12
      include ../common/spinner.pug
  div(ng-hide="isLoading")
    .row
      .col-md-12
        include ./form.pug
    .row
      .col-md-12
        .buttons.text-right
          a.btn.btn-default(href="/projects") Cancel
          button.btn.btn-primary(ng-click="saveProject()" ng-disabled="projectForm.$invalid || isSaving") Save
