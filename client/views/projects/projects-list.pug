extends ../layout/layout.pug

block content
  .row
    .col-md-12
      h1.page-header Projects
  .row(ng-show="isLoading")
    .col-md-12
      include ../common/spinner.pug
  div(ng-hide="isLoading")
    .row
      .col-md-12
        a.btn.btn-default.btn-primary(href="/projects/new") New Project
    .row
      .col-md-12
        table.table.table-striped.projects
          thead
            tr
              td
                strong Name
              td
          tbody
            tr(ng-repeat="project in projects")
              td {{ project.name }}
              td.actions
                button.btn.btn-info.btn-sm(title="Edit" ng-click="editProject(project)" ng-disabled="isSaving")
                  span.glyphicon.glyphicon-pencil
