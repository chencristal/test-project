extends ../layout/layout.pug

block content
  .row
    .col-md-12
      h1.page-header Edit Document Template {{ ::documentTemplate.name }}
  .row(ng-show="isLoading")
    .col-md-12
      include ../common/spinner.pug
  div(ng-hide="isLoading")
    .row
      .col-md-12
        include ./form.pug
    .row
      .col-md-12
        .buttons.text-right
          a.btn.btn-default(href="/document-templates") Cancel
          button.btn.btn-primary(ng-click="saveDocumentTemplate()" ng-disabled="documentTemplateForm.$invalid || isSaving") Save
